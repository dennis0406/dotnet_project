@model IEnumerable<QLBanNongSan.Models.San_pham>


@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>2LHMD Shop</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- style css -->
    <link href="~/Public/Style/style.css" rel="stylesheet" />
    <link href="~/Public/Style/mycustom.css" rel="stylesheet" />
    <!-- Responsive-->
    <link href="~/Public/Style/responsive.css" rel="stylesheet" />
    <!-- fevicon -->
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link href="~/Public/Style/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <!-- Tweaks for older IEs-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <style>
        .text-register {
            white-space: nowrap;
            width: 140px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .price:after {
            content: "\20AB";
        }  

        .bag__icon {
            font-size: 25px;
            position: relative;
        }


            .bag__icon::after {
                content: attr(data-text);
                position: absolute;
                font-size: 12px;
                color: #ffff;
                background-color: #df0b0bc7;
                padding: 0 4px;
                border-radius: 50%;
                left: 50%;
                bottom: 40%;
                z-index: 999;
            }
    </style>
</head>
<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/Public/Images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header class="full_bg">
        <!-- header inner -->
        <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo">
                                    <a href="@Url.Action("Index", "SanPham")"><img src="~/Public/Images/logo1.png" alt="#" style="width: 160px; height: 38px; object-fit: cover" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <nav class="navigation navbar navbar-expand-md navbar-dark ">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarsExample04">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item ">
                                        <a class="nav-link" href="@Url.Action("Index", "SanPham")">Trang chủ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#about">Về chúng tôi</a>
                                    </li>

                                    <li class="dropdown">
                                        <button class="btn btn-secondary bg-transparent text-uppercase dropdown-toggle border-0" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                            Danh mục sản phẩm
                                        </button>
                                        <ul class="dropdown-menu bg-transparent" aria-labelledby="dropdownMenuButton2">
                                            @if (ViewBag.loaiNS != null)
                                            {
                                                foreach (var item in ViewBag.loaiNS)
                                                {
                                                    <li><a class="dropdown-item fw-bold" href="@Url.Action("DanhMuc","SanPham", new {@id = item.ma_nong_san })">@item.ten_loai</a></li>
                                                }
                                            }
                                        </ul>
                                    </li>


                                    <li class="nav-item">
                                        <a class="nav-link" href="#contact">Liên hệ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "GioHang")"><ion-icon class="bag__icon" data-text="@ViewBag.cart" name="cart-outline"></ion-icon></a>
                                    </li>
                                    <li class="nav-item">
                                        @if (Session["ClientId"] == null)
                                        {
                                            <a class="nav-link text-register" href="@Url.Action("DangNhap", "TaiKhoan")">Đăng nhập</a>
                                        }
                                        else
                                        {
                                            <div class="btn-group bg-transparent dropstart">
                                                <button class="btn dropdown-toggle text-register text-uppercase text-white" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                    @Session["ClientId"]
                                                </button>
                                                <ul class="dropdown-menu mt-2" aria-labelledby="dropdownMenuButton">
                                                    <li><a class="dropdown-item" href="@Url.Action("LichSu", "TaiKhoan")">Lịch sử mua hàng</a></li>
                                                    <li><a class="dropdown-item" href="@Url.Action("DangXuat", "TaiKhoan")">Đăng xuất</a></li>
                                                </ul>
                                            </div>
                                        }
                                    </li>

                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
        <!-- end header -->
        <!-- banner -->
        <section class="banner_main">
            <div class="container">
                <div class="banner_po">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="text_box">
                                <span>Now started</span>
                                <h1> <strong>Fruits And </strong> <br> Vegetables </h1>
                                <a class="read_more" href="#about" role="button">Về chúng tôi</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <!-- end banner -->
    <!-- about -->
    <div id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="titlepage">
                        <h2>Về chúng tôi</h2>
                        <span>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptu </span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="about_img">
                        <figure><img src="~/Public/Images/about.png" alt="#" /></figure>
                        <a class="read_more" href="Javascript:void(0)"> Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end about -->
    <!-- our products -->
    <div class="products">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="titlepage">
                        @using (Html.BeginForm())
                        {
                            <div class="input-group my-3">
                                @Html.TextBox("SearchString", "", new { @class = "form-control" })
                                <input type="submit" class="btn btn-outline-info" value="Tìm kiếm" />
                            </div>
                        }
                        <h2>Sản phẩm mới nhất</h2>
                        <span>
                            Chuyên cung cấp các loại rau củ tươi ngon.
                        </span>
                    </div>
                </div>
            </div>
            <div class="row product__lists">

                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div id="ho_bo" class="our_products text-center">
                            <div class="product">
                                <figure><img src="~/Public/Images/@Html.DisplayFor(modelItem => item.hinh_anh)" alt="#" style="width: 270px; height: 210px; object-fit: cover" /></figure>
                            </div>
                            <h3>@Html.DisplayFor(modelItem => item.ten_san_pham)</h3>
                            <span class="price">@String.Format("{0:#,##}", Convert.ToDecimal(item.gia))</span>
                            <p>
                                @if (item.so_luong > 0)
                                {
                                    <a class="btn btn-outline-success" href="/GioHang/AddToCart/@Html.DisplayFor(modelItem => item.ma_san_pham)">Thêm giỏ hàng</a>
                                    <a class="btn btn-outline-success" href="/SanPham/ChiTiet/@Html.DisplayFor(modelItem => item.ma_san_pham)">Chi tiết</a>
                                }
                                else
                                {
                                    <button class="btn btn-dark" disabled>Đã bán hết</button>
                                }
                            </p>
                        </div>
                    </div>
                }

            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="titlepage">
                        <h2>Sản phẩm bán chạy</h2>
                        <span>
                            Chuyên cung cấp các loại rau củ tươi ngon.
                        </span>
                    </div>
                </div>
            </div>
            <div class="row product__lists">

                @foreach (var item in ViewBag.spbc)
                {
                    var itemId = item.ma_san_pham;
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div id="ho_bo" class="our_products text-center">
                            <div class="product">
                                <figure><img src="~/Public/Images/@item.hinh_anh" alt="#" style="width: 270px; height: 210px; object-fit: cover" /></figure>
                            </div>
                            <h3>@item.ten_san_pham</h3>
                            <span class="price">@String.Format("{0:#,##}", Convert.ToDecimal(item.gia))</span>
                            <p>
                                @if (item.so_luong > 0)
                                {
                                    <a class="btn btn-outline-success" href="/GioHang/AddToCart/@item.ma_san_pham">Thêm giỏ hàng</a>
                                    <a class="btn btn-outline-success" href="/SanPham/ChiTiet/@item.ma_san_pham">Chi tiết</a>
                                }
                                else
                                {
                                    <button class="btn btn-dark" disabled>Đã bán hết</button>
                                }
                            </p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>


    <!-- end our products -->
    <!--  contact -->
    <div id="contact" class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Liên hệ với chúng tôi</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6  padding_right0">
                    <div class="map_main">
                        <div class="map-responsive">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.112248038313!2d108.2385983152887!3d16.05966394395886!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142177f0057f675%3A0xdec5dbe31838c835!2zMzY1UitWOUcsIDEwMUIgTMOqIEjhu691IFRyw6FjLCBQaMaw4bubYyBN4bu5LCBTxqFuIFRyw6AsIMSQw6AgTuG6tW5nIDU1MDAwMCwgVmlldG5hbQ!5e0!3m2!1sen!2sus!4v1651919653018!5m2!1sen!2sus" width="600" height="453" frameborder="0" style="border:0; width: 100%;" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 padding_left0">
                    <form id="request" class="main_form">
                        <div class="row">
                            <div class="col-md-12 ">
                                <input class="contactus" placeholder="Tên" type="type" name="Name">
                            </div>
                            <div class="col-md-12">
                                <input class="contactus" placeholder="Số điện thoại" type="type" name="Phone">
                            </div>
                            <div class="col-md-12">
                                <input class="contactus" placeholder="Email" type="type" name="Email">
                            </div>
                            <div class="col-md-12">
                                <textarea class="textarea" placeholder="Nội dung" type="type" Message="Message">Nội dung</textarea>
                            </div>
                            <div class="col-md-12">
                                <button class="send_btn">Gửi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact -->
    <!--  footer -->
    <footer>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="newslatter">
                            <h4>Subscribe Our Newsletter</h4>
                            <form class="bottom_form">
                                <input class="enter" placeholder="Enter your email" type="text" name="Enter your email">
                                <button class="sub_btn">subscribe</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class=" border_top1"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <h3>menu LINKS</h3>
                        <ul class="link_menu">
                            <li><a href="@Url.Action("Index", "SanPham")">Trang chủ</a></li>
                            <li><a href="@Url.Action("Index", "SanPham")#about">Về chúng tôi</a></li>
                            <li><a href="@Url.Action("Index", "SanPham")">Sản phẩm</a></li>
                            <li><a href="@Url.Action("Index", "SanPham")#contact">Liên hệ</a></li>
                        </ul>
                    </div>
                    <div class=" col-md-3">
                        <h3>TOP food</h3>
                        <p class="many">
                            There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected
                        </p>
                    </div>
                    <div class="col-lg-3 offset-mdlg-2     col-md-4 offset-md-1">
                        <h3>Contact </h3>
                        <ul class="conta">
                            <li><i class="fa fa-map-marker" aria-hidden="true"></i> Location</li>
                            <li> <i class="fa fa-envelope" aria-hidden="true"></i><a href="#"> twolhmdshop@gmail.com</a></li>
                            <li><i class="fa fa-mobile" aria-hidden="true"></i> Call : +01 1234567890</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 offset-md-1">
                            <p>© @DateTime.Now.Year - 2LHMD Shop</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end footer -->
    <!-- Javascript files-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- sidebar -->
    <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
</body>
</html>

