<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>@ViewBag.Title - 2LHMD Shop</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- style css -->
    <link href="~/Public/Style/style.css" rel="stylesheet" />
    <link href="~/Public/Style/mycustom.css" rel="stylesheet" />
    <!-- Responsive-->
    <link href="~/Public/Style/responsive.css" rel="stylesheet" />
    <!-- fevicon -->
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link href="~/Public/Style/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <!-- Tweaks for older IEs-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    @RenderSection("head", required: false)
    <style>

        .bag__icon {
            font-size: 25px;
            position: relative;
        }


            .bag__icon::after {
                content: attr(data-text);
                position: absolute;
                font-size: 12px;
                color: #ffff;
                background-color: #df0b0bc7;
                padding: 0 4px;
                border-radius: 50%;
                left: 50%;
                bottom: 40%;
                z-index: 999;
            }
        .text-register {
            white-space: nowrap;
            max-width: 140px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<!-- body -->
<body class="main-layout inner_page">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/Public/Images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header class="full_bg">
        <!-- header inner -->
        <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo">
                                    <a href="@Url.Action("Index", "SanPham")"><img src="~/Public/Images/logo1.png" alt="#" style="width: 160px; height: 38px; object-fit: cover" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <nav class="navigation navbar navbar-expand-md navbar-dark ">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarsExample04">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("Index", "SanPham")">Trang chủ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "SanPham")#about">Về chúng tôi</a>
                                    </li>
                                    <li class="dropdown">
                                        <button class="btn btn-secondary bg-transparent text-uppercase dropdown-toggle border-0" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                            Danh mục sản phẩm
                                        </button>
                                        <ul class="dropdown-menu bg-transparent" aria-labelledby="dropdownMenuButton2">
                                            @foreach (var item in ViewBag.loaiNS)
                                            {
                                                <li><a class="dropdown-item " href="@Url.Action("DanhMuc","SanPham", new {@id = item.ma_nong_san })">@item.ten_loai</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "SanPham")#contact">Liên hệ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "GioHang")"><ion-icon class="bag__icon" data-text="@ViewBag.cart" name="cart-outline"></ion-icon></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-register" href="@Url.Action("DangNhap", "TaiKhoan")">
                                            @if (Session["ClientId"] == null)
                                            {
                                                <span>Đăng nhập</span>
                                            }
                                            else
                                            { <span>@Session["ClientId"]</span>}
                                        </a>
                                    </li>
                                    @if (Session["ClientId"] != null)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("DangXuat", "TaiKhoan")">Đăng xuất</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
        <!-- end header -->
        <!-- banner -->

    </header>
    <!-- end banner -->
    <!-- Renderbody-->
    @RenderBody()

    <!--  footer -->
    <footer>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="newslatter">
                            <h4>Subscribe Our Newsletter</h4>
                            <form class="bottom_form">
                                <input class="enter" placeholder="Enter your email" type="text" name="Enter your email">
                                <button class="sub_btn">subscribe</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class=" border_top1"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <h3>menu LINKS</h3>
                        <ul class="link_menu">
                            <li><a href="#">Home</a></li>
                            <li><a href="about.html"> About</a></li>
                            <li><a href="product.html">Our Product</a></li>
                            <li><a href="gallery.html">Gallery</a></li>
                            <li><a href="contact.html">Contact Us</a></li>
                            <li><a href="contact.html">Contact Us</a></li>
                        </ul>
                    </div>
                    <div class=" col-md-3">
                        <h3>TOP food</h3>
                        <p class="many">
                            There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected
                        </p>
                    </div>
                    <div class="col-lg-3 offset-mdlg-2     col-md-4 offset-md-1">
                        <h3>Contact </h3>
                        <ul class="conta">
                            <li><i class="fa fa-map-marker" aria-hidden="true"></i> Location</li>
                            <li> <i class="fa fa-envelope" aria-hidden="true"></i><a href="#"> twolhmdshop@gmail.com</a></li>
                            <li><i class="fa fa-mobile" aria-hidden="true"></i> Call : +01 1234567890</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 offset-md-1">
                            <p>© @DateTime.Now.Year - 2LHMD Shop</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end footer -->
    <!-- Javascript files-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- sidebar -->
    <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
</body>
</html>
