
@{
    ViewBag.Title = "Đang xử lý";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
    var dem = 0;
    string[] statuses = {"processing", "shipping", "" };
}

<h1 class="mt-4">Đơn hàng đang xử lý</h1>


<div class="card-body">
    <table id="datatablesSimple" class="text-center">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên khách hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Phí vận chuyển</th>
                <th>Ghi chú</th>
                <th>Trạng thái</th>
                <th>Sửa trạng thái</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>STT</th>
                <th>Tên khách hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Phí vận chuyển</th>
                <th>Ghi chú</th>
                <th>Trạng thái</th>
                <th>Sửa trạng thái</th>
            </tr>
        </tfoot>
        <tbody>

            @foreach (var item in Model)
            {
                dem += 1;
            
            <tr>
                <td>
                    @dem
                </td>
                @foreach (var kh in ViewBag.khachHang)
                {
                    if (kh.ma_khach_hang == item.ma_khach_hang)
                    {
                        <td>
                            @kh.ten_khach_hang
                        </td>
                    }

                }
                <td>
                    @item.ngay_dat_hang
                </td>
                <td>
                    @item.tong
                </td>
                <td>
                    @item.phi_van_chuyen
                </td>
                <td>
                    @item.ghi_chu
                </td>
                <td>
                    @item.trang_thai
                </td>
                <td>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Thay đổi trạng thái</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </td>
            </tr>
        }
            </tbody>
        </table>
</div>

